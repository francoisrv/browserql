{
  "name": "browserqlcore",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "w": "bash workspace.sh",
    "W": "yarn workspaces",
    "docsify": "docsify serve ./docs",
    "docsify:update": "cp docs/README.md . && cp docs/ROADMAP.md ."
  },
  "dependencies": {
    "husky": "^4.3.0",
    "lodash": "^4.17.19",
    "typescript": "^4.0.3"
  },
  "resolutions": {
    "graphql": "14.6.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run docsify:update"
    }
  }
}
